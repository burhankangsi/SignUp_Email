<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword"
    android:orientation="vertical"
    android:background="#e0eaf6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reset_pass"
        android:text="Welcome to Reset Password Page"
        android:textStyle="bold"
        android:textColor="#ba160c"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="58dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reset_activity"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:background="#f7dfd5"
        android:text="Back to Login"
        android:textColor="#001148"/>

</LinearLayout>